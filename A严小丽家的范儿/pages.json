// pages.json 文件用来对 uni-app 进行全局配置，决定页面文件的路径、窗口样式、原生的导航栏、底部的原生tabbar 等。
{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index1/index1",//第一项启动页
			"style": {
				"navigationBarTitleText": "消息"
			}
		},{
			"path":"pages/index2/index2",
			"style":{
				"navigationBarTitleText":"通讯录"
				}
		},{
			"path":"pages/index3/index3",
			"style":{
				"navigationBarTitleText":"发现"
				}
		},{
			"path":"pages/index4/index4",
			"style":{
				"navigationBarTitleText":"我"
				}
		},{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},{
			"path": "pages/index4/upload",
			"style": {
				"navigationBarTitleText": "上传"
			}
		}
	],
	"globalStyle": {//全局样式
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"condition":{//仅用于调试小程序开发者工具里面的某个页面，能够快速定位
		"current":0,
		"list":[{
			"name":"lily",
			"path":"pages/index4/upload"
		}]
	},
	"tabBar":{//底部导航栏表现
		"borderStyle":"black",
		"selectedColor":"#1afa29",
		"list":[{
			"pagePath":"pages/index1/index1",
			//图标网址 https://www.iconfont.cn/
			"iconPath":"static/image/icon/message.png",
			"selectedIconPath":"static/image/icon/message2.png",
			"text":"消息"
		},{
			"pagePath":"pages/index2/index2",
			"iconPath":"static/image/icon/customer_service.png",
